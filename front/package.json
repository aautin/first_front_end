{
  "name": "front",
  "dependencies": {
    "live-server": "^1.2.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "tsc": "npx tsc --watch --preserveWatchOutput &",
    "live-server": "npx live-server --port=5500 --open=src &",
    "start": "npm run live-server && npm run tsc",
    "stop": "pkill -f live-server && pkill -f tsc"
  }
}
